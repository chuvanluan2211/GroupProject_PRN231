@model User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  
    <title>Login</title>
</head>
<body>
    <div class="container">
        <h2><i class="fas fa-lock"></i>Login</h2>
        <form asp-action="Login" asp-controller="Login" method="post">
            <div class="input-group">
                <label asp-for="@Model.Email">Email</label>
                <input asp-for="@Model.Email" id="username" name="Email" required>
            </div>
            <div class="input-group">
                <label asp-for="@Model.Password">Password</label>
                <input asp-for="@Model.Password" id="password" name="password" type="password" required>
            </div>
            <button type="submit" class="btn">Login</button>
        </form>
    </div>
    <style>
        .container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 300px;
            text-align: center;
        }

        h2 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        .input-group {
            margin-bottom: 20px;
        }

            .input-group label {
                display: block;
                margin-bottom: 8px;
                color: #777;
            }

            .input-group input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 16px;
            }

        .btn {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #0056b3;
            }

        .fa-lock {
            margin-right: 10px;
        }

    </style> 
</body>
</html>
